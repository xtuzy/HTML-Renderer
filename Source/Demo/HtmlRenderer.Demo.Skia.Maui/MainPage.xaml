<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="HtmlRenderer.Demo.Skia.Maui.MainPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:html="clr-namespace:HtmlRendererCore.Skia.Maui;assembly=HtmlRendererCore.Skia.Maui">

    <ScrollView>
        <VerticalStackLayout x:Name="stackLayout" BackgroundColor="AliceBlue">
            <HorizontalStackLayout BackgroundColor="Gray">
                <Button
                    x:Name="CounterBtn"
                    Clicked="OnCounterClicked"
                    Text="Show Panel" />
                <Button
                    x:Name="manyLabelButton"
                    Clicked="ManyLabelButton_Clicked"
                    Text="Many Label" />
            </HorizontalStackLayout>
            <html:HtmlLabel
                x:Name="htmlLabel"
                BackgroundColor="Coral"
                HorizontalOptions="Center" />
            <html:HtmlLabel
                x:Name="htmlPanel"
                BackgroundColor="Pink"
                HorizontalOptions="Center" />
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
